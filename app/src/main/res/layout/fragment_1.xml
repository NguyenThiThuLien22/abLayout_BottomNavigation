            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi"
            android:text="Lớp:"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
